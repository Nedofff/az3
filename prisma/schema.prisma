model News {
  id         String       @default(cuid()) @unique @id
  title      String
  srcToImage String? @map("src_to_image")
  date       DateTime @default(now())
  widthImg  Int? @map("width_img")
  heightImg Int? @map("height_img")
  content       String
  tags String[]

  @@map("news")
}

model Reports {
  id          String       @default(cuid()) @unique @id
  year        Int
  srcToReport        String @map("src_to_report")
  listOrganization String[] @map("list_organization")
  moneySSO   Int @map("money_sso")
  moneyAudit Int @map("money_audit")
  moneyAll   Int @map("money_all")
  moneyOther Int @map("money_other")

  @@map("reports")
}

model User {
    id            String       @default(cuid()) @unique @id
    name         String  @unique         
    password         String          
    role            String
    @@map("users")
}
